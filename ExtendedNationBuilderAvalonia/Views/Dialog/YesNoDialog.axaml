<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
		Width="250" 
		Height="150"
        x:Class="ExtendedNationBuilderAvalonia.Views.Dialog.YesNoDialog"
		CanResize="False">
	<Grid RowDefinitions="*, 40" ColumnDefinitions="*, *" Margin="20">
	    <TextBlock x:Name="messageTextBox"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Top"
				   TextAlignment="Center"
				   Margin="0, 10, 0, 0"
				   Grid.Row="0"
				   Grid.ColumnSpan="2"
				   TextWrapping="Wrap"/>
		
		<Button Content="Yes"
				Click="YesClick"
				Grid.Row="1"
				Grid.Column="0"
				HorizontalAlignment="Center"/>
		
		<Button Content="No" 
				Click="NoClick"
				Grid.Row="1"
				Grid.Column="1"
				HorizontalAlignment="Center"/>
	</Grid>

</Window>
